.bar_item {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  line-height: 112rpx;
  background: #fff;
  color: #4D4D4D;
  font-size: 24rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  box-shadow: 0px 0px 5px 0px rgba(181, 181, 181, 0.5);

}

.bar_item .long {
  border-top: 1rpx solid #fff;
  width: 100%;
  background: #333;
}

