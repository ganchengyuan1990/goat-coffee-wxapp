<view class="container">
    <!-- <view class="service-policy">
    <view class="item">30天无忧退货</view>
    <view class="item">48小时快速退款</view>
    <view class="item">满88元免邮费</view>
  </view> -->
  <view class="title">
        <image style='width: 36rpx; height: 36rpx; position: relative; top: 8rpx; margin-right: 8rpx;' src='../img/flag.png'/>
        <text>饮品券买二赠一/买三赠二/买五赠五，可组合购买</text>
    </view>

    <view class="no-cart" wx:if="{{couponLists.length <= 0}}">
        <view class="c">
            <image src="http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/noCart-a8fe3f12e5.png" />
            <text>去添加点什么吧</text>
        </view>
    </view>
    <view class="cart-view">
        
        <checkbox-group class="radio-group">
            <label wx:for="{{couponLists}}" wx:for-index="idx" wx:for-item="item" wx:key="{{idx}}" class="list-item {{item.additional ? 'additional' : ''}}" bindtap="goStore">
                <image class='gift' wx:if="{{item.additional}}" src="../img/gift.png"/>
                            <view class='cover-top'></view>
                            <view class='cover-bottom'></view>
                            <view class='left-part'>
                                <!-- <checkbox value="{{idx}}" class="checkbox {{item.checked ? 'wx-checkbox-input-checked' : 'wx-checkbox-input'}}" data-id="{{idx}}" checked="{{item.checked}}" /> -->
                                <view class="list-item-deal {{item.coupon.couponType === 2 ? 'no_margin_left' : ''}}">
                                    <label class="deal-icon"></label>
            <label class="deal-num">
                            ￥<text style="font-size: 45rpx;">{{item.voucher_price}}</text>
            </label>
            </view>
            <view style="color: #999999; font-size: 24rpx; position: relative; left: -5rpx;">
                尚余{{item.myNumber}}杯
            </view>
            </view>
            <view class='right-part'>
                <view class="list-item-name">
                    <view class="promotion-description {{item.tCoreCoupon && item.tCoreCoupon.availabileStartTime || item.couponBref ? '' : 'higher'}}">{{item.voucher_name}}
                        <image style='width: 30rpx; height: 32rpx; position: relative; top: 7rpx; margin-left: 3rpx;' src='../img/flag.png' data-type='1' data-index="{{idx}}" bindtap="toast" />
                    </view>
                </view>
                <view class="order-create-form-item" wx:if="{{!item.additional}}">
                    <view class="content">

                        <label class="btn btn-minus {{(item.count <= 0)? 'btn-disable' : ' '}}" data-index="{{idx}}" data-available="{{item.ifAvailable}}" bindtap="decreaseRoomCount">
                            <image src="../img/minus.png" mode="widthFix"/>
                        </label>
                        <text class="room-count" type="text">{{item.num}}</text>
                        <label class="btn btn-plus" data-index="{{idx}}" data-available="{{item.ifAvailable}}" bindtap="increaseRoomCount">
                            <image src="../img/add.png" mode="widthFix"/>
                        </label>
                    </view>
                </view>
            </view>
            <!-- <view class="coupon-right">
                                <image src="../../../images/coffee_cup_2@2x.png" />
                            </view> -->
            </label>
        </checkbox-group>

        <checkbox-group class="radio-group">
            <label wx:for="{{addtionalLists}}" wx:for-index="idx" wx:for-item="item" wx:key="{{idx}}" class="list-item {{item.additional ? 'additional' : ''}}" bindtap="goStore">
                <image class='gift' wx:if="{{item.additional}}" src="../img/gift.png"/>
                            <view class='cover-top'></view>
                            <view class='cover-bottom'></view>
                            <view class='left-part'>
                                <!-- <checkbox value="{{idx}}" class="checkbox {{item.checked ? 'wx-checkbox-input-checked' : 'wx-checkbox-input'}}" data-id="{{idx}}" checked="{{item.checked}}" /> -->
                                <view class="list-item-deal {{item.coupon.couponType === 2 ? 'no_margin_left' : ''}}">
                                    <label class="deal-icon"></label>
            <label class="deal-num">
                            ￥<text style="font-size: 45rpx;">{{item.voucher_price}}</text>
            </label>
            </view>
            <view style="color: #999999; font-size: 24rpx; position: relative; left: -5rpx;">
                赠送{{countGift}}杯
            </view>
            </view>
            <view class='right-part'>
                <view class="list-item-name">
                    <view class="promotion-description {{item.tCoreCoupon && item.tCoreCoupon.availabileStartTime || item.couponBref ? '' : 'higher'}}">{{item.voucher_name}}
                                <image style='width: 30rpx; height: 30rpx; position: relative; top: 7rpx; margin-left: 3rpx;' src='../img/flag.png' data-type='2' data-index="{{idx}}" bindtap="toast"/>
                    </view>
                </view>
                <view class="order-create-form-item" wx:if="{{!item.additional}}">
                    <view class="content">

                        <label class="btn btn-minus {{(item.count <= 0)? 'btn-disable' : ' '}}" data-index="{{idx}}" data-available="{{item.ifAvailable}}" bindtap="decreaseRoomCount">
                            <image src="../img/minus.png" mode="widthFix"/>
                        </label>
                        <text class="room-count" type="text">{{item.num}}</text>
                        <label class="btn btn-plus" data-index="{{idx}}" data-available="{{item.ifAvailable}}" bindtap="increaseRoomCount">
                            <image src="../img/add.png" mode="widthFix"/>
                        </label>
                    </view>
                </view>
            </view>
            <!-- <view class="coupon-right">
                                <image src="../../../images/coffee_cup_2@2x.png" />
                            </view> -->
            </label>
        </checkbox-group>


        <view class="cart-bottom">
            <!-- <view class="checkbox {{checkedAllStatus ? 'checked' : ''}}" bindtap="checkedAll">全选({{cartTotal.checkedGoodsCount}})</view> -->
            <view class="total">应付合计 <text class='signal'>￥</text><text class='money'>{{cartTotal.checkedGoodsAmount}}</text></view>
            <!-- <view class="delete" bindtap="editCart">{{!isEditCart ? '编辑' : '完成'}}</view> -->
            <!-- <view class="checkout" bindtap="deleteCart" wx:if="{{isEditCart}}">删除所选</view> -->
            <view class="checkout" bindtap="checkoutOrder">去结算</view>
        </view>
    </view>
</view>