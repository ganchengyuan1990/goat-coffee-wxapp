.picker-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
  display: flex;
  flex-flow: column nowrap;
  font-size: 28rpx;
  color: #333;
}

.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 71%;
  background-color: #fff;
  display: flex;
  flex-flow: column nowrap;
  transform: translateY(100%);
  animation: picker-appear 0.3s;
  animation-fill-mode: forwards;
}

@keyframes picker-appear {
  0% {
    transform: translateY(100%);
  }
  100% {
    transform: translateY(0);
  }
}

.picker-header {
  height: 85rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #e4e4e4;
  position: relative;
}

.picker-cancel {
  position: absolute;
  left: 0;
  top: 0;
  width: 96rpx;
  height: 100%;
}

.picker-confirm {
  position: absolute;
  right: 0;
  top: 0;
  padding-left: 100rpx;
  width: 96rpx;
  height: 100%;
}

.picker-body {
  flex: 1 1;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}

.picker-scroll {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.picker-footer {
  border-top: 1rpx solid #e4e4e4;
  height: 100rpx;
  /*不知道为什么, 加上 position relative, 华为上就能触发点击事件了*/
  position: relative;
}

.ip5-nowrap {
  white-space: nowrap;
}
