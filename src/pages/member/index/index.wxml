<view class="center" bind:tap="goProfile" wx:if="{{hasLogin}}">
    <image src="{{img}}"></image>
    <view class='personal'>
        <view class="nick">{{name}}</view>
    </view>
</view>


<image wx:if="{{hasLogin}}" class='back-img' src="http://img.goatup.net/img/config/%E8%83%8C%E6%99%AF@2x.png" mode="widthFix" />

<view class="user-container" wx:if="{{hasLogin}}">

    


    <view class="head-wrap">

        <view class="gogogo" bind:tap="goProfile">
            <view class="nav_left_items {{curNav == 0 ? 'active' : ''}}" catchtap="goMyCoupon" data-index="0"
                data-id="{{item.id}}">
                <view style="height: 50rpx;">0<text style='font-size: 21rpx'>张</text></view>
                <view class='title'>优惠券</view>
                
                <!-- <view class="line" wx:if="{{curNav == 0}}"></view> -->
            </view>
            <view class="nav_left_items {{curNav == 1? 'active' : ''}}" catchtap="goMyCoupon" data-index="1"
                data-id="{{item.id}}">
                <view style="height: 50rpx;">0<text style='font-size: 21rpx'>张</text></view>
                <view class='title'>兑换券</view>
                <view class="seperate-line seperate-line-left"></view>
                <view class="seperate-line"></view>
                <!-- <view class="line" wx:if="{{curNav == 1}}"></view> -->
            </view>
            <view class="nav_left_items {{curNav == 2? 'active' : ''}}" catchtap="goMyCoupon" data-index="2"
                data-id="{{item.id}}">
                <!-- <view class="red_dot" wx:if="{{showDot}}"></view> -->
                <view style="height: 50rpx;">0<text style='font-size: 21rpx'>张</text></view>
                <view class='title'>满减券</view>
                <!-- <view class="line" wx:if="{{curNav == 2}}"></view> -->
            </view>
            <!-- <image src="{{img}}"></image> -->
        </view>
        
        <!-- <view class="right" bindtap="goQrCode">
            <image src="../../../images/mofang.png"></image>
        </view> -->
        

        <!-- <view style="background: #fff;"> -->


            <view style="max-height: 45vh; position: absolute; top: 100rpx; width: 100%; ">
                <view class='progress_wrap'>
                    <view class="chi_item" bindtap="goMyOrder">
                        <image class="my_icon" src="../../../images/my_order.png"/>
                        <text style="margin-left: 60rpx;">我的订单</text>
                        <image class="arrow" src="../../../images/arrow.png"/>
                        <view class="arrow-line"></view>
                    </view>
                    <view class="chi_item" bindtap="goMyService">
                        <image class="my_icon" src="../../../images/my_service.png"/>
                        <text style="margin-left: 60rpx;">客户服务</text>
                        <image class="arrow" src="../../../images/arrow.png"/>
                    </view>
                </view>

            </view>
        <!-- </view> -->
    </view>
    
    <view class="mask" catchtap="hideMask" wx:if="{{showMaskSheng}}">
        <view class="fixed_middle">
            <view>
                <image src="{{activityCupYesImg}}" />
            </view>
            <view class="mention">
                <view>领取成功</view> 
                <view style="margin-top: 5rpx;">兑换券*{{couponNum}}已发送到您的卡包，请查收！</view>
            </view>
            <view class="gogo">
                兑换券有效期：7天
            </view>
        </view>
    </view>

    <view class="mask" catchtap="hideMask" wx:if="{{showMask}}">
        <view class="fixed_middle">
            <view>
                <image src="../../../images/sbark.png" />
            </view>
            <view class="mention">
            领取成功 兑换券已发送到您的卡包，请查收！
            </view>
        </view>
    </view>
    

    <!-- <view style="height: 100px; position: fixed; bottom: 100rpx; left: 45rpx; width: 88%;">
        <image mode="widthFix" style="width: 100%; height: 100%;" src="{{banner}}"  catchtap="goInvite"/>
    </view> -->
</view>


<view class="search-empty" wx:if="{{!hasLogin}}">
    <view>
        <image style="margin: 346rpx 0 30rpx;width: 127rpx; height: 127rpx;" src="../../../images/no_member.png" />
    </view>    您还没有登录，请登录后查看个人信息
    <button class="btn-login flex-center"  open-type="getUserInfo"
        bindgetuserinfo="getUserInfo">
        登录
    </button>
</view>

<toast wx:if="{{errorToastShown}}" is-show="{{errorToastShown}}" title="{{errorInfo}}" disappear-sec="3"></toast>


<!-- <view class="dibu">

</view> -->

<view class="act-wrap" wx:if="{{isActWrapShow}}" catchtap="closeToast">
    <view class="mask {{isActWrapShow ? 'active':''}}" catchtap="closeToast"></view>
    <view class="cnt">
        <view class="btn-close" catchtap="closeToast"></view>
        <image src="{{actImage}}" mode="widthFix" bindtap="handleImage"></image>
    </view>
</view>

