/* pages/my/profile/edit.wxss */
.edit-wrap {
    padding: 40rpx 30rpx;
}
.ipt-wrap {
    display: flex;
    align-items: center;
    width: 100%;
    height: 108rpx;
    padding: 0 30rpx;
    /* border: 2rpx solid #e6e6e6; */
    color: #333;
    font-size: 32rpx;
    box-sizing: border-box;
    box-shadow:0px 2rpx 10rpx 0rpx rgba(35,24,21,0.15);
    border-radius:10rpx;
}
.ipt-wrap .tt {
    flex: none;
    margin-right: 24rpx;
}
.ipt-wrap .ipt {
    flex: 1;
}
.btn-wrap {
    margin-top: 490rpx;
    padding: 0 10rpx;
}
.btn-wrap .btn-save {
    width: 100%;
    padding: 24rpx 0;
    border-radius: 10rpx;
    color: #fff;
    background: #000;
    text-align: center;
    font-size: 36rpx;
    line-height: 1;
    color: #D32D25;
}