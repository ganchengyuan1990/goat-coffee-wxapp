            </view>
        </view>
        <view class="item" bind:tap="goEdit">
            <view class="tt">
                <text>手机号</text>
            </view>
            <view class="cnt">
                <view class="desc">{{name}}</view>
                <view class="icon-arrow"></view>
            </view>
        </view>
