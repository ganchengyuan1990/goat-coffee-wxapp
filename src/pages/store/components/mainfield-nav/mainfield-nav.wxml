<!-- 回首页 -->
<template name="index_item">
  <view class="homepage-nav nav-item" bindtap="onClickHomePageNav">
    <image class="nav-icon" src="{{item.buttonPic}}"></image>
    <view class="nav-txt {{item.showSwitch && item.isRedPointShown ? 'bubble-txt' : ''}}">{{item.buttonText}}</view>
  </view>
</template>

<!-- 拼单button -->
<template name="pindan_item">
  <view class="pindan-container">
    <block wx:if="{{!item.alreadyShared && item.hasPopUpImg}}">
      <view class="nav-item" bindtap="onClickGetShareWindow">
        <image class="nav-icon" src="{{item.buttonPic}}"></image>
        <view class="nav-txt {{item.showSwitch && item.isRedPointShown ? 'bubble-txt' : ''}}">{{item.buttonText}}</view>
      </view>
    </block>
    <!-- 处理认证和登录 -->
    <block wx:else="">
      <button wx:if="{{!item.isUserAuthorized}}" class="authorize-btn nav-btn" open-type="getUserInfo" bindgetuserinfo="onClickToAuthroize"></button>
      <button class="nav-item nav-btn" bindtap="onClickBuyTogetherShare" open-type="share" id="buytogether">
        <image class="nav-icon" src="{{item.buttonPic}}"></image>
        <view class="nav-txt {{item.showSwitch && item.isRedPointShown ? 'bubble-txt' : ''}}">{{item.buttonText}}</view>
      </button>
      <view wx:if="{{item.showLoginLayer}}" bindtap="toLogin" class="transparent-layer"></view>
    </block>
  </view>
</template>

