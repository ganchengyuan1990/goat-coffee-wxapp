<!-- 去 App button -->
<template name="goapp_item">
  <button class="nav-item nav-btn" bindtap="onItemTap" open-type="launchApp" app-parameter="{{item.appUrl}}" catchtap="launchAppTap" binderror="launchAppError">
    <image class="nav-icon" src="{{item.buttonPic}}"></image>
    <view class="nav-txt {{item.showSwitch && item.isRedPointShown ? 'bubble-txt' : ''}}">{{item.buttonText}}</view>
  </button>
</template>

<!-- 分享button -->
<template name="share_item">
  <button class="reset-btn-to-view nav-item nav-btn" open-type="share" id="nav-share-btn" bindtap="onClickShareNav">
    <image class="nav-icon" src="{{item.buttonPic}}"></image>
    <view class="nav-txt {{item.showSwitch && item.isRedPointShown ? 'bubble-txt' : ''}}">{{item.buttonText}}</view>
  </button>
</template>

<view class="mainfield-nav" wx:if="{{isShow}}" style="{{'top: ' + (11 + navHeight + status) + 'px'}}">
  <block wx:for="{{buttonList}}" wx:key="{{index}}">
    <view bindtap="onItemTap" data-name="{{item.templateName}}">
      <template is="{{item.templateName}}" data="{{ item }}"></template>
    </view>
    <view class="bottom-line" wx:if="{{index < buttonList.length - 1}}"></view>
  </block>
</view>
<view class="page-covering" wx:if="{{isShow}}" bind:tap="onClickNotShow" catchtouchmove="touchmoveHandler"></view>
