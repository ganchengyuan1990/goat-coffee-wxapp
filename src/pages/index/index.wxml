    <view class="block green_block {{!isLogin || !continueDrinkActivity ? 'no_border_bottom' : ''}}" bindtap='goPin' wx:if="{{existInviteActivity}}">
      
      <view class="left">
          <view class='title view'>邀请返现</view>
          <view class='mark view'>INTIVE RETURN</view>
        </view>
        <view class="right">
          <image src="../../images/fanxian.png" />
        </view>
    </view>
    <view class="block green_block">
      <view class="block_item_up" catchtap='goDaka'>
        <view class="left">
          <view class='title view'>咖啡打卡<text class="data_txt">({{actualDrinkNum}}/7)</text></view>
          <view class='mark view'>COFFEE PUNCH CEAD</view>
        </view>
        <view class="right">
          <image src="../../images/punch.png" />
        </view>
      </view>
      <view class="block_item_down" catchtap='goQrcode'>
        <view class="left">
          <view class='title view'>会员码</view>
          <view class='mark view'>MEMBERSHIP CODE</view>
        </view>
        <view class="right">
          <image src="../../images/member_qrcode.png" />
        </view>
      </view>
    </view>
  </view>


