<view class="container">
  <view class="img-wrapper">
    <!-- <image src="{{banner}}" /> -->
    <swiper 
      style="min-height: 520rpx" 
      indicator-active-color="#fff" 
      mode="widthFix" 
      indicator-dots="{{true}}" 
      indicator-color="rgba(0, 0, 0, .5)"
      indicator-active-color="rgba(0,0,0,0.2)"
      autoplay="{{true}}" 
      interval="{{4000}}" 
      previous-margin="12px" 
      circular="true" 
      next-margin="12px"
      duration="{{600}}">
      <block wx:for="{{banner}}" wx:key="{{index}}" class="img-caption">
        <swiper-item>
          <ml-navigator redirect_url="{{item.redirect_url}}" redirect_route="{{item.redirect_route}}">
            <image class="swiper_image" src="{{item.pic}}"/>
          </ml-navigator>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- <view class="line">
  </view> -->

  <!-- <view class="member_block">
  </view> -->

  <view class="success-container">
    <view class="block fenhong" bindtap='goStore'>
      <view class="left">
        <view class='title view'>现在下单</view>
        <view class='mark view'>ORDER NOW</view>
      </view>
      <view class="right">
        <image src="{{youngHomeOrderImg}}" />
      </view>
    </view>
