page{
    background: rgb(240, 242, 245);
    min-height: 100%;
}

.container{
    background: rgb(240, 242, 245);
    min-height: 100%;
    padding-top: 30rpx;
}

.success-form {
  /* height: 510rpx; */
  /* width: 100%; */
  background: rgb(240, 242, 245);
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 20rpx;
  display: flex;
  text-align: center;
  flex-direction:column;

}
.img-container {
  width: 690rpx;
  margin: 0 auto;
  height: 274rpx;
  position: relative;
  font-size: 22rpx;
  color: #fff;
}

.img-container image{
  width: 100%;
  height: 100%;
}

.title_container {
  position: absolute;
  right: 50rpx;
  top: 30rpx;
}
.title {
  font-size: 28rpx;
  top: 0rpx;
}

.sub_title {
  /* position: absolute;
  right: 50rpx; */
  top: 20rpx;
}
.input-box{
  flex: 1;
  height: 70rpx;
  color: #333;
  font-size: 24rpx;
  background: #fff;
  position: relative;
  border: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 4rpx;
  margin-right: 30rpx;
}

.coupon-sn{
  /* height: 50rpx; */
  margin: -30rpx 0 60rpx 0;
  color: rgba(35, 35, 35, 1);
  line-height: 50rpx;
  font-size: 30rpx;
}

.coupon-sn image {
  margin-top: 100rpx;
  width: 167rpx;
  height: 167rpx;
}

.clear-icon{
  position: absolute;
  top: 21rpx;
  right: 30rpx;
  width: 28rpx;
  height: 28rpx;
}

.add-btn{
  height: 70rpx;
  border:none;
  width: 268rpx;
  margin-top: 40rpx;
  background: #b4282d;
  border-radius: 0;
  line-height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.add-btn.disabled{
  background: #ccc;
}

.help{
  height: 72rpx;
  line-height: 72rpx;
  text-align: right;
  padding-right: 30rpx;
  background: url(https://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/couponHelp-4768607555.png) 590rpx center no-repeat;
  background-size: 28rpx;
  color: #999;
  font-size: 24rpx;
}

.coupon-list{
  /* width: 100%; */
  height: auto;
  overflow: hidden;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.item{
  position: relative;
  height: 290rpx;
  width: 100%;
  background: linear-gradient(to right,#cfa568,#e3bf79);
  margin-bottom: 30rpx;
  padding-top: 52rpx;
}

.tag{
  height: 32rpx;
  background: #A48143;
  padding-left: 16rpx;
  padding-right: 16rpx;
  position: absolute;
  left: 20rpx;
  color: #fff;
  top: 20rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 32rpx;
}


.content{
  margin-top: 24rpx;
  margin-left: 40rpx;
  display: flex;
  margin-right: 40rpx;
  flex-direction: row;
  align-items: center;
}

.content .left{
  flex: 1;
}

.name{
  font-size: 44rpx;
  color: #fff;
  margin-bottom: 14rpx;
}

.time{
  font-size: 24rpx;
  color: rgba(255,255,255, 0.8);
  line-height: 30rpx;
}

.content .right{
  width: 162rpx;
}

.go{
  height: 48rpx;
  border:none;
  width: 162rpx;
  background: rgba(255,255,255, 0.8);
  border-radius: 4rpx;
  line-height: 48rpx;
  color: #b69150;
  font-size: 24rpx;
}

.condition{
  position: absolute;
  width: 100%;
  bottom: 0;
  left:0;
  height: 78rpx;
  background: rgba(0,0,0,.08);
  padding: 24rpx 40rpx;
  display: flex;
  flex-direction: row;
}

.condition .txt{
  display: block;
  height: 30rpx;
  flex: 1;
  overflow: hidden;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #fff;
}


.condition .icon{
  margin-left: 30rpx;
  width: 24rpx;
  height: 24rpx;
}

.button {
  height: 80rpx;
  width: 300rpx;
  margin: 0 auto;
  line-height: 80rpx;
  background: #fff;
  font-weight: bold;
  text-align: center;
  font-size: 34rpx;
  border-radius: 0;
  border-radius: 10rpx;
  position: absolute;
  right: 30rpx;
  bottom: 40rpx;
  border-radius: 40rpx;
  color: rgb(245, 65, 67);
}

.pay_again {
  width:600rpx;
  height:90rpx;
  line-height: 90rpx;
  background:rgba(222,65,50,1);
  border-radius:6rpx;
  color: #fff;
  font-size: 36rpx;
  margin-left: 50rpx;
  margin-bottom: 60rpx;
}

.blank {
  border:1px solid rgba(35, 24, 21, 1);
  background: rgb(240, 242, 245);
  color: #231815;
}


.coupon_image {
  width:460rpx;
  height:261rpx;
  /* background:rgba(255, 255, 255, 1); */
  /* box-shadow:0rpx 2rpx 10rpx 0rpx rgba(35, 24, 21, 0.2); */
  border-radius:10rpx;
}

.coupon_image_wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 460rpx;
  margin: 0 auto;
  margin-bottom: 50rpx;
}

.coupon_image_wrapper .text {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  color: #656565;
  font-size: 20rpx;
}

.gif {
  position: fixed;
  right: 20rpx;
  top: 15%;
}

.gif image{
  width: 100rpx;
  border-radius: 0;
  height: 100rpx;
}

.score_state {
  font-size: 52rpx;
  font-family:PingFangSC-Medium,
  PingFang SC;
  font-weight:500;
  color: #232323;
  line-height:42rpx;
  text-align: center;
  margin-top: -25rpx;
  margin-bottom: 100rpx;
}

.line_button {
  width:286rpx;
  height:102rpx;
  line-height:102rpx;
  background:rgba(35, 24, 21, 1);
  border-radius:10rpx;
  border:1rpx solid rgba(151, 151, 151, 1);
  margin: 0 30rpx;
}

.free {
  color: #DAA37F;
  font-size: 34rpx;
}

.ready {
  color: #231815;
  background: rgb(240, 242, 245);
  border:1rpx solid rgba(35, 24, 21, 1);
}