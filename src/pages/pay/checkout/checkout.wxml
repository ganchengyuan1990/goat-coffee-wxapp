        <view class="item" wx:for="{{checkedGoodsList}}" wx:key="{{item.id}}">
            <view class="img">
                <image src="{{item.img[0]}}"></image>
            </view>
            <view class="info">
                <view class="t">
                    <text class="name">{{item.name}}</text>
                    <text class="number">x{{item.number}}</text>
                </view>
                <view class="b">￥{{item.price}}</view>
            </view>
        </view>
