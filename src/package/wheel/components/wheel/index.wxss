.wheel_header image {
  width: 590rpx;
  height: 102rpx;
  margin-bottom: 30rpx
}
.wheel_wp {
  width: 640rpx;
  height: 640rpx;
  position: relative;
  margin: 0 auto
}
.wheel_wp image {
  display: block;
  width: 100%;
  height: 100%
}
.wheel_wp .wheel_pointer {
  position: absolute;
  width: 185rpx;
  height: 240rpx;
  top: 50%;
  left: 50%;
  margin: -120rpx 0 0 -92.5rpx
}
.close image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 74rpx
}

.btn {
  height: 240rpx !important;
  width: 185rpx !important;
  position: relative;
}

.btn_name {
  position: absolute;
  font-size:67rpx;
  font-family:PingFang SC;
  font-weight:600;
  color:rgba(255, 255, 255, 1);
  line-height:135rpx;
  top: 70rpx;
  left: 30rpx;
}

.left_times {
  position: absolute;
  bottom: 17rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:600;
  color:rgba(240, 240, 255, 1);
  line-height:60rpx;
  left: 70rpx;
}