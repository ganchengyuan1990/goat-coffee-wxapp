.hfe-vue-dialog-backdrop {
  position: fixed;
  z-index: 9998;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
  transition: opacity 0.3s ease;
}
.hfe-vue-dialog-toast-content-backdrop .wc {
  display: inline-block;
  padding: 20rpx 80rpx;
  background-color: #585858;
  border-radius: 15rpx;
  color: #fff;
  font-size: 28rpx;
}
.hfe-vue-dialog-toast-wrapper {
  display: flex;
  max-width: 95%;
  margin: auto;
  height: 100%;
  align-items: center;
  justify-content: center;
}
