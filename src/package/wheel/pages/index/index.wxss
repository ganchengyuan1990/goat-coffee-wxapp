.start-btn {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 8rpx;
  border-radius: 8rpx;
  height: 130rpx;
  width: 220rpx;
  background:linear-gradient(137deg,rgba(255,208,38,1) 0%,rgba(255,201,103,1) 100%);
  /* box-shadow:-6rpx -6rpx 5rpx 0rpx rgba(243,190,37,1); */
