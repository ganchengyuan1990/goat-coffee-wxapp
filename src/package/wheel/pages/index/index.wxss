  text-align: center;
  font-size: 35rpx;
  font-weight: bolder;
  line-height: 40rpx;
  display: flex;
  flex-direction: column;
}

.award-image {
  position: absolute;
  margin: auto;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 70rpx;
  width: 110rpx;
}

.award-title {
  position: absolute;
  margin: auto;
  bottom: 5%;
  left: 50%;
  transform: translate(-50%, 0);
  font-size:20rpx;
  width: 160rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  text-align: center;
  color:rgba(150,124,31,1);
}

.animation_title {
  animation: 3s rowup linear infinite normal;
  overflow: hidden;
}

@keyframes rowup {
  0%   {opacity: 0;}
  20%   {opacity: 1;}
  85%  {opacity: 1;}
  100% {opacity: 0;}
}

