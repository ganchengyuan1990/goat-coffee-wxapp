.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 150rpx 0;
    box-sizing: border-box;
}

.section {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #eee;
    width: 570rpx;
    position: relative;
}

.section input {
    display: inline-block;
    height: 100rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
}
.getVerify {
    position: absolute;
    right: 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    top: 20rpx;
    font-size: 26rpx;
    border: 1rpx solid #eee;
    /* padding: 10rpx; */
    width: 228rpx;
    text-align: center;
}

.btn-area {
    margin-top: 50rpx;
    height: 100rpx;
    margin-bottom: 30rpx;
}

.btn-area .button {
    border-radius: 50rpx !important;
    border: 0 !important;
    margin: 0 auto;
    width: 100%;
    background: #d8d8d8;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
}

