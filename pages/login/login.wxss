.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.section {
    height: 100rpx;
    line-height: 100rpx;
    border: 1rpx solid #eee;
    width: 570rpx;
    position: relative;
}

.section input {
    display: inline-block;
    height: 100rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
}
.getVerify {
    position: absolute;
    right: 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    top: 20rpx;
    font-size: 26rpx;
    border: 1rpx solid #eee;
    /* padding: 10rpx; */
    width: 228rpx;
    text-align: center;
}

.btn-area {
    margin-top: 30rpx;
    height: 100rpx;
}

.btn-area button {
    border-radius: 0 !important;
}

