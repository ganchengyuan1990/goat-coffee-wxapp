.mask {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 998;
    background-color: rgba(0, 0, 0, 0.8);
    pointer-events: none;
    opacity: 0;
    transition: all .5s;
}

.mask.active {
    opacity: 1;
}
.panel {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 999;
    /* background-color: rgba(0, 0, 0, 0.8); */
    display: flex;
    flex-direction: column;
}

.panel .top {
    flex-grow: 1;
}

.panel .bottom {
    background: #fff;
}
.cart-entry {
    display: flex;
    /* justify-content: space-around; */
    align-items: center;
    position: fixed;
    bottom: 30rpx;
    right: 38rpx;
    min-width: 256rpx;
    height: 94rpx;
    padding: 0 20rpx;
    border-radius: 100rpx;
    z-index: 99;
    background: #E50113;
    color: #fff;
    font-size: 28rpx;
    box-shadow: 0 0 15rpx 0 rgba(0, 0, 0, 0.5);
}

.cart-entry .tt {
    padding: 0 20rpx 0 40rpx;
}

.cart-entry .price {
    color: #fff;
    font-size: 40rpx;
}
