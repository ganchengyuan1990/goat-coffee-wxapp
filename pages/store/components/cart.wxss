.cart-panel  {
    transform: translateY(100%);
    transition: transform .3s;
}
.cart-panel.active  {
    transform: translateY(0);
    transition: transform .3s;
}

.cart-panel .hd {
    display: flex;
    justify-content: space-between;
    padding: 26rpx 40rpx;
    color: #666;
    font-size: 24rpx;
    background: #efefef;
}

.cart-panel .hd .btn-more {
    color: #333;
}
.cart-panel .hd .btn-more text {
    padding-left: 20rpx;
}

.cart-panel .bd {
    display: flex;
    flex-direction: column;
    height: 460rpx;
    padding: 40rpx;
}

.cart-panel .bd .overview {
    flex: none;
    display: flex;
    justify-content: space-between;
    font-size: 20rpx;
}

.cart-panel .bd .fee {
    flex: none;
    font-size: 24rpx;
}

.cart-panel .ft {
    display: flex;
    height: 110rpx;
    line-height: 110rpx;
    background: #fff;
}

.cart-panel .ft .total {
    flex: 1;
    padding-left: 60rpx;
    font-size: 24rpx;
    color: #666;
    box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.4);
}

.cart-panel .ft .total .price {
    font-size: 32rpx;
    color: #000;
}

.cart-panel .ft .btn-check {
    flex: none;
    width: 40%;
    color: #fff;
    background: #333;
    text-align: center;
    font-size: 28rpx;
}
.cart-panel .list-wrap {
    flex: none;
    overflow-y: scroll;
    height: 390rpx;
}
.list-wrap .list-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 0;
    font-size: 32rpx;
    line-height: 44rpx;
}
.list-wrap .list-item .desc {
    margin-top: 8rpx;
    font-size: 20rpx;
    line-height: 28rpx;
    color: #666;
}
.list-wrap .counter {
    display: flex;
    align-items: center;
}

.list-wrap .counter .num {
    min-width: 20rpx;
    padding: 0 20rpx;
    font-size: 22rpx;
    text-align: center;
}

.list-wrap .counter .ico {
    flex: none;
    width: 36rpx;
    height: 36rpx;
    border: 1rpx solid #a3a3a3;
    border-radius: 50%;
    line-height: 30rpx;
    text-align: center;
    font-size: 36rpx;
    color: #a3a3a3;
}
.list-wrap .counter .ico.ico-plus {
    border-color: #d8d8d8;
    color: #fff;
    background: #d8d8d8;
}


.line-through{
    text-decoration: line-through;
}