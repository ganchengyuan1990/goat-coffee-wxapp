.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 998;
  background-color: rgba(0, 0, 0, 0.8);
  pointer-events: none;
  opacity: 0;
  transition: all .5s;
}
.mask.active {
  opacity: 1;
}
.panel {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  /* background-color: rgba(0, 0, 0, 0.8); */
  display: flex;
  flex-direction: column;
}

.panel .top {
  flex-grow: 1;
}
.panel .bottom {
  background: #fff;
}
.cate-panel {
  transform: translateY(100%);
  transition: transform .3s;
}
.cate-panel.active {
  transform: translateY(0);
  transition: transform .3s;
}
.cate-panel .bottom {
  position: fixed;
  top: 8%;
  display: flex;
  flex-direction: column;
  /* height: 80%; */
  /* padding: 40rpx; */
  border-radius: 10rpx;
  font-size: 28rpx;
  /* height: 90%; */
  /* width: 80%; */
  left: 5%;
  right: 5%;
}

.cate-panel .hd {
  flex: none;
  display: flex;
  justify-content: space-between;
  /* padding-bottom: 30rpx; */
  position: relative;
  /* border-bottom: 1rpx solid #c6c6c6; */
  color: #000;
}

.cate-panel .hd .cn {
  font-size: 40rpx;
}

.cate-panel .hd .en {
  font-size: 20rpx;
  color: #c6c6c6;
}

.cate-panel .bd {
  height: calc(37vh + 10rpx);
  padding-top: 26rpx;
  /* border-bottom: 1rpx solid #c6c6c6; */
  overflow-y: scroll;
  /* box-shadow:0px 0px 5px 0px rgba(181, 181, 181, 0.5); */
}
.cate-panel .ft {
  flex: none;
  padding-bottom: 30rpx;
  height: 16vh;
}

.tt {
  display: flex;
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  /* background: rgba(0,0,0,0.1) */
}

.flex-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #fff;
}

.cate-panel .fig {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background: #eee;
  overflow: hidden;
}
.cate-panel .fig image {
  width: 120rpx;
  height: 120rpx;
}
.opt-group {
  display: flex;
  margin-top: 1rpx;
  font-size: 28rpx;
}

.opt-group .opt-tt {
  flex: none;
  width: 118rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.opt-group .opt-bd {
  font-size: 0;
}

.opt-group .opt-bd .item {
  padding: 0 10rpx;
  display: inline-block;
  min-width: 150rpx;
  height: 60rpx;
  margin: 0 30rpx 26rpx 0;
  /* padding: 14rpx 0; */
  border: 2rpx solid #FFDBDB;
  border-radius: 60rpx;
  text-align: center;
  color: #DF0202;
  font-size: 28rpx;
  line-height: 60rpx;
}

.opt-group .opt-bd .item.active {
  color: #FF0000;
  background: #FFDBDB;
  border-color: #fff;
}

.price-wrap .price {
  font-size: 36rpx;
}

.price-wrap .desc {
  font-size: 20rpx;
  color: #c6c6c6;
}

.counter-wrap {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 25rpx;
}

.counter-wrap .counter {
  display: flex;
  align-items: center;
}

.counter-wrap .counter .num {
  padding: 0 30rpx;
  font-size: 22rpx;
}

.counter-wrap .counter .ico {
  position: relative;
  flex: none;
  width: 46rpx;
  height: 46rpx;
  /* border: 1rpx solid #000; */
  border-radius: 50%;
  /* line-height: 40rpx; */
  text-align: center;
  /* font-size: 44rpx; */
}
.ico-txt {
  transform: scale(1.6);
}
.counter-wrap .counter .ico.disable {
  color: #999;
  border-color: #999; 
}
.button_wrapper {
  display: flex;
  position: absolute;
  bottom: 30rpx;
  width: 100%;
}
.btn-confirm {
  width: 40%;
  height: 72rpx;
  line-height: 72rpx;
  margin-top: 60rpx;
  border-radius: 5rpx;
  background: #ff8483;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}

.cart {
  background: #F50000;
}

.btn-confirm:last-child {
  margin-left: 100rpx;
  margin-right: 80rpx;
}
.icon-crown {
  display: inline-block;
  vertical-align: bottom;
  width: 36rpx;
  height: 30rpx;
  background: url('data:image/png;base64,') no-repeat 0 0/contain;
}

