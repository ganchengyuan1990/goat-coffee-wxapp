page {
  background-color: #fff;
}
.store-container {
  /* display: flex; *//* flex-direction: column; */
  height: 100vh;
  overflow: hidden;
}

.hd-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 144rpx;
  padding-right: 30rpx;
}

.img-wrap {
  width: 100%;
}

.img-caption {
  display: block;
  width: 100%;
}

.store-addr {
  padding-left: 58rpx;
  font-size: 24rpx;
  line-height: 1.4;
}

.store-addr .tt {
  position: relative;
}

.store-addr .tt::before {
  content: "ico";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate(-100%, -50%);
}

.store-addr .distance {
  color: #999;
}

.btn-delivery {
  flex: none;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 4rpx;
  border: 2rpx solid #7d7d7d;
  border-radius: 68rpx;
  color: #7d7d7d;
  font-size: 28rpx;
}

.btn-delivery .item {
  padding: 18rpx 24rpx;
  border-radius: 70rpx;
  line-height: 1;
}

.btn-delivery .item.active {
  color: #fff;
  background: #7d7d7d;
}

.food {
  display: flex;
  height: 100%;
}

.food-class {
  width: 200rpx;
  background-color: #f5f5f5;
}

.food-class .active {
  background-color: #fff;
}

.food-class .food-class-item {
  position: relative;
  height: 100rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.food-class .food-class-item:last-child {
  margin-bottom: 120rpx;
}

.food-class .food-class-item .text {
  text-align: center;
  max-height: 80rpx;
  overflow: hidden;
}

.food-class .food-class-item .dot {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  background-color: red;
  right: 4rpx;
  top: 4rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 20rpx;
}

.food-detail {
  flex-grow: 1;
  padding-left: 20rpx;
  font-size: 26rpx;
}

.food-detail .title {
  font-weight: 700;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #eee;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.food-detail .title-group {
  padding-bottom: 30rpx;
}

.food-detail .title-group:last-child {
  margin-bottom: 120rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.food-info {
  margin-bottom: 68rpx;
  display: flex;
}

.food-info:last-child {
  margin-bottom: 0;
}

.food-info .img {
  margin-right: 24rpx;
}

.food-info .img image {
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.food-info .info {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info .name {
  /* line-height: 2; */
  font-size: 32rpx;
  font-weight: 400;
}

.info .note {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 20rpx;
  line-height: 1.4;
  color: #c6c6c6;
}

.price-count {
  display: flex;
  align-items: center;
  /* height: 50rpx;
  line-height: 50rpx; */
}

.price-count .price {
  font-size: 30rpx;
  line-height: 1;
  flex-grow: 1;
  color: #000;
}

.price-count .count {
  display: flex;
  line-height: 60rpx;
  flex-grow: 1;
  flex-direction: row-reverse;
}

.price-count .count .num {
  line-height: 50rpx;
  font-size: 30rpx;
}

.btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  font-size: 40rpx;
  font-weight: 400;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  background-color: #d8d8d8;
  margin: 0 16rpx;
}

.cart-entry {
  display: flex;
  /* justify-content: space-around; */
  align-items: center;
  position: fixed;
  bottom: 30rpx;
  right: 38rpx;
  min-width: 276rpx;
  height: 94rpx;
  border-radius: 100rpx;
  z-index: 99;
  background: #fff;
  color: #999;
  font-size: 28rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.5);
}

.cart-entry .tt {
  padding: 0 20rpx 0 40rpx;
}

.cart-entry .price {
  color: #333;
  font-size: 40rpx;
}

.cart-panel .hd {
  display: flex;
  justify-content: space-between;
  padding: 26rpx 40rpx;
  color: #666;
  font-size: 24rpx;
  background: #efefef;
}
.cart-panel .hd .btn-more {
  color: #333;
}
.cart-panel .bd {
  min-height: 200rpx;
  padding: 40rpx;
  
}
.cart-panel .bd .overview {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
}
.cart-panel .bd .overview .btn-clear {

}
.cart-panel .bd .fee {
  font-size: 24rpx;
}
.cart-panel .ft {
  display: flex;
  height: 110rpx;
  line-height: 110rpx;
  background: #fff;
}
.cart-panel .ft .total {
  flex: 1;
  padding-left: 60rpx;
  font-size: 24rpx;
  color: #666;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.4);
}
.cart-panel .ft .total .price {
  font-size: 32rpx;
  color: #000;
}
.cart-panel .ft .btn-check {
  flex: none;
  width: 40%;
  color: #fff;
  background: #333;
  text-align: center;
  font-size: 28rpx;
}
.panel {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
}

.panel .top {
  flex-grow: 1;
}
.panel .bottom {
  background: #fff;
}
.cate-panel .bottom {
  height: 80%;
  padding: 40rpx;
  border-radius: 10rpx 10rpx 0 0;
  font-size: 28rpx;
}

.cate-panel .hd {
  display: flex;
  justify-content: space-between;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #c6c6c6;
  color: #000;
}

.cate-panel .hd .cn {
  font-size: 52rpx;
}

.cate-panel .hd .en {
  font-size: 20rpx;
  color: #c6c6c6;
}

.cate-panel .bd {
  max-height: 45%;
  padding-top: 26rpx;
  border-bottom: 1rpx solid #c6c6c6;
  overflow-y: scroll;
}

.cate-panel .fig {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background: #eee;
}

.opt-group {
  display: flex;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.opt-group .opt-tt {
  flex: none;
  width: 118rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.opt-group .opt-bd {
  font-size: 0;
}

.opt-group .opt-bd .item {
  display: inline-block;
  min-width: 150rpx;
  height: 60rpx;
  margin: 0 30rpx 26rpx 0;
  /* padding: 14rpx 0; */
  border: 2rpx solid #999;
  border-radius: 60rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  line-height: 60rpx;
}

.opt-group .opt-bd .item.active {
  color: #fff;
  background: #000;
  border-color: #000;
}

.price-wrap .price {
  font-size: 36rpx;
}

.price-wrap .desc {
  font-size: 20rpx;
  color: #c6c6c6;
}

.counter-wrap {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 38rpx;
}

.counter-wrap .counter {
  display: flex;
  align-items: center;
}

.counter-wrap .counter .num {
  padding: 0 20rpx;
  font-size: 22rpx;
}

.counter-wrap .counter .ico {
  flex: none;
  width: 46rpx;
  height: 46rpx;
  border: 1rpx solid #000;
  border-radius: 50%;
  line-height: 44rpx;
  text-align: center;
  font-size: 44rpx;
}

.btn-confirm {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  margin-top: 60rpx;
  border-radius: 10rpx;
  background: #000;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}
