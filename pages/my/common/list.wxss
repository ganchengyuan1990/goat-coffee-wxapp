.list-wrap {
    padding: 0 30rpx;
}

.list-wrap .item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    height: 112rpx;
    border-bottom: 2rpx solid #f2f2f2;
    line-height: 112rpx;
    color: #333;
}

.list-wrap .item .tt {
    display: flex;
    align-items: center;
    position: relative;
    height: 100%;
    font-size: 32rpx;
}
.list-wrap .item .cnt,
.list-wrap .item .desc {
    display: flex;
    align-items: center;
    color: #999;
    font-size: 28rpx;
}
.prefix-icon {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    margin-right: 24rpx;
}

.icon-arrow {
    width: 15rpx;
    height: 15rpx;
    margin-left: 20rpx;
    border-right: 1rpx solid #7d7d7d;
    border-top: 1rpx solid #7d7d7d;
    transform: translateX(-6rpx) rotate(45deg);
}
.dark {
    color: #333!important;
}