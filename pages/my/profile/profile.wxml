<view class="profile-wrap">
    <view class="list-wrap">
        <view class="item" bind:tap="chooseImage">
            <view class="tt">
                <text>头像</text>
            </view>
            <view class="cnt">
                <view class="desc">
                    <image class="avatar" src="{{img}}"></image>
                </view>
                <view class="icon-arrow"></view>
            </view>
        </view>
        <view class="item" bind:tap="goEdit">
            <view class="tt">
                <text>昵称</text>
            </view>
            <view class="cnt">
                <view class="desc">{{name}}</view>
                <view class="icon-arrow"></view>
            </view>
        </view>
        <view class="item" bind:tap="showGenderList">
            <view class="tt">
                <text>性别</text>
            </view>
            <view class="cnt">
                <view class="desc">{{gender == 1 ? '男': '女'}}</view>
                <view class="icon-arrow"></view>
            </view>
        </view>
        <view class="item">
            <view class="tt">
                <text>绑定手机号</text>
            </view>
            <view class="cnt">
                <view class="desc dark">{{userInfo.tel}}</view>
                <!-- <view class="icon-arrow"></view> -->
            </view>
        </view>
    </view>
    <view class="btn-wrap">
        <view class="btn-save" bind:tap="saveProfile">保存</view>
    </view>
</view>