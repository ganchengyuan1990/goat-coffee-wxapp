page {
    height: 100%;
    background: #fff;
}

.container {
    margin: 30rpx auto;
}
.panel {
    padding: 0 30rpx;
    border-top: 10rpx solid #f5f5f5;
    color: #333;
    background: #fff;
}
.border-line {
    border-bottom: 2rpx solid #f2f2f2;
}
.hd-wrap {
    padding: 30rpx 32rpx;
    position: relative;
    background: #fff;
}
.hd-wrap .tt {
    color: #000;
    font-size: 36rpx;
    font-weight: 600;
    line-height: 50rpx;
    text-align: center;
}
.hd-wrap .desc {
    margin-top: 8rpx;
    color: #000;
    font-size: 24rpx;
    text-align: center;
    line-height: 40rpx;
}

.order-box {
    overflow: hidden;
}

.order-box .order-title {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
    color: #999;
    font-size: 24rpx;
}
.order-box .order-item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    overflow: hidden;
    background: #fff;
}

.order-box .order-item .l {
    display: flex;
    flex-direction: column;
    width: 35%;
    line-height: 52rpx;
    overflow: hidden;
    font-size: 32rpx;
}

.order-box .order-item .l .format {
    font-size: 20rpx;
    color: #666666;
}

.order-box .order-item .center {
    width: 100rpx;
}

.order-box .order-item .r {
    /* float: right; */
    text-align: right;
    width: 50%;
    height: 52rpx;
    line-height: 52rpx;
    overflow: hidden;
}

.order-box .order-item.no-border {
    border-bottom: none;
}

.transport-item {
    position: relative;
    color: #666666;
    font-size: 28rpx;
}

.transport-item .l {
    margin: 40rpx 0;
}

.transport-item .r {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    /* margin: 30rpx; */
}

.special-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    height: 112rpx;
    border-top: 2rpx solid #f2f2f2;
    font-size: 28rpx;
}

.special-item .l {
    color: #666666;
}

.center {
    height: 52rpx;
    line-height: 52rpx;
}

.center .txt {
    font-size: 24rpx;
    color: #333;
}

.special-item .r {
    font-size: 32rpx;
}

.addr-box {
    padding-bottom: 50rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}
.addr-box .name {
    margin-top: 40rpx;
}
.addr-box .addr {
    margin-top: 12rpx;
    font-size: 32rpx;
    line-height: 44rpx;
}
.addr-box .date {
    margin: 30rpx 0;
}
.tip-box .name {
    margin-top: 40rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}
.tip-box .desc {
    margin-top: 30rpx;
    font-size: 26rpx;
    color: #999;
    line-height: 36rpx;
}

.order_numer {
    text-align: center;
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #F9504C;
    color: #fff;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    font-size: 42rpx;
    /* color: #999; */
    font-weight: bold;
}

.button {
    height: 80rpx;
    width: 300rpx;
    margin: 0 auto;
    line-height: 80rpx;
    background: #fff;
    font-weight: bold;
    text-align: center;
    font-size: 34rpx;
    border-radius: 0;
    border-radius: 10rpx;
    position: absolute;
    right: 30rpx;
    bottom: 40rpx;
    border-radius: 40rpx;
    color: rgb(245, 65, 67);
}

.btn-buy {
    padding: 16rpx 32rpx;
    border: 2rpx solid #999;
    color: #333;
    font-size: 24rpx;
    line-height: 1;
    display: inline-block;
    /* margin: 0 auto; */
    width: 100rpx;
    text-align: center;
    margin-right: 20rpx;
    /* padding: 0 15rpx; */
}

.to-pay {
    border: 1rpx solid #FFDBDB;
    color: #DF0202;
}

.red {
    color: #f50000;
}

.addr-box .r {
    margin: 40rpx 20rpx;
}

.act-wrap {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 998;
}

.act-wrap .mask {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.8);
    pointer-events: none;
    opacity: 0;
    transition: all .5s;
}

.act-wrap .mask.active {
    opacity: 0.9;
}

.act-wrap .cnt {
    position: absolute;
    top: 0;
    left: 15%;
    width: 70%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.act-wrap .cnt image {
    width: 100%;
    height: auto;
}

.act-wrap .btn-close {
    align-self: flex-end;
    position: relative;
    width: 64rpx;
    height: 64rpx;
    background: url('data:image/png;base64,') no-repeat center center/contain;
    transform: translateY(-40rpx);
}