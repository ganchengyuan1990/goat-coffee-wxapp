<view class="container">
    <view class="hd-wrap">
        <view class="tt">已完成</view>
        <view class="desc">感谢您的光临</view>
    </view>
    <view class="panel order-box">
        <view class="border-line">
            <view class="order-title border-line">
                <text class="name">外卖单号{{detail.orderNo}}</text>
                <text>{{detail.CreateTime}}</text>
            </view>
            <view class="order-item" wx:for="{{detail.orderDetail_list}}">
                <view class="l">
                    <text class="name">{{item.productName}}</text>
                    <text class="format">a/v/c</text>
                </view>
                <view class="center">
                    <text class="txt">X {{item.number}}</text>
                </view>
                <view class="r">
                    <text class="txt">￥123</text>
                </view>
            </view>
            <view class="order-item">
                <view class="l">
                    <text class="name">美式咖啡</text>
                    <text class="format">a/v/c</text>
                </view>
                <view class="center">
                    <text class="txt">X 123</text>
                </view>
                <view class="r">
                    <text class="txt">￥123</text>
                </view>
            </view>
        </view>
        <view class="transport-item">
            <view class="l">
                <text class="name">配送费</text>
            </view>
            <view class="r">
                <text class="txt">￥{{detail.deliverFee}}</text>
            </view>
        </view>
        <view class="transport-item" bindtap="goCoupon">
            <view class="l">
                <text class="name">兑换券</text>
            </view>
            <view class="r">
                <text class="txt">无可用</text>
                <!-- <image class="arrow" /> -->
                <!-- <image class="txt" src="../../../images/arrow.png"/> -->
            </view>
        </view>
        <view class="transport-item" bindtap="goPromotion">
            <view class="l">
                <text class="name">优惠券</text>
            </view>
            <view class="r">
                <text class="txt">- ￥123</text>
                <!-- <image class="arrow" src="../../../images/arrow.png" /> -->
                <!-- <image class="txt" src="../../../images/arrow.png"/> -->
            </view>
        </view>
        <view class="special-item">
            <view class="l">
                <text class="name">共两件商品</text>
            </view>
            <view class="r">
                实付{{detail.payAmount}}
            </view>
        </view>
    </view>
    <view class="panel addr-box">
        <view class="name">姓名女士</view>
        <view class="addr">地址地址地址地址地址地址地址地址地址</view>
        <view class="date">配送时间</view>
    </view>
</view>