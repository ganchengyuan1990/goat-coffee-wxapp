
.wrapper {
  padding: 30rpx 20rpx;
  background: #f4f4f4;
}

.group-wrapper {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.img_wrapper image{
  width: 100%;
  height: 300rpx;
}

.info {
  display: flex;
  position: relative;
}

.item {
  height: 120rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: column;
  color: #333;
  font-size: 32rpx;
  margin-right: 40rpx;
}

.bigger {
  font-size: 36rpx;
  font-weight: 600;
}

.button {
  color: #fff;
  background: #333;
  line-height: 90rpx;
  height: 90rpx;
  width: 200rpx;
  position: absolute;
  right: 10rpx;
  top: 15rpx;
  border-radius: 5rpx;
  text-align: center;
  font-size: 28rpx;
  margin-right: 0 !important;
}