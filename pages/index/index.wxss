page {
  background: #fff;
  min-height: 100%;
}

.img-wrapper image{
  width: 100%;
  height: 608rpx;
}

.container {
  background: #fff;
  min-height: 100%;
  
}



.imageWrapper {
  margin: 50rpx;
  flex: 1;
  display: flex;
  text-align: center;
}

.block {
  margin: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 160rpx;
  line-height: 160rpx;
  border-bottom: 1rpx solid #eee;
}

.left {
  line-height: 130rpx;
  flex: 1;
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  height: 160rpx;
}

.right {
  height: 100%;
  width: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.left view {
  display: inline-block;
  height: 40rpx;
}

.right image{
  width: 64rpx;
  height: 64rpx;
  margin-left:130rpx;
}

.line {
  height: 2rpx;
  background: #e5e5e5;
  width: 100%;
}

.title {
  font-size: 36rpx;
  color: #222222;
  font-weight: 500;
}

.mark {
  color: #808080;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.tags {
  background: #F50000;
  padding: 0rpx 20rpx;
  line-height: 36rpx;
  height: 36rpx;
  text-align: center;
  border-radius: 18rpx;
  color: #fff;
  font-size: 20rpx;
  position: relative;
  left: -90rpx;
  top: -12rpx;
}

.act-wrap {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 998;
}

.act-wrap .mask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.8);
  pointer-events: none;
  opacity: 0;
  transition: all .5s;
}

.act-wrap .mask.active {
  opacity: 0.5;
}

.act-wrap .cnt {
  position: absolute;
  top: 0;
  left: 15%;
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.act-wrap .cnt image {
  width: 100%;
  height: auto;
}

.act-wrap .btn-close {
  align-self: flex-end;
  position: relative;
  width: 64rpx;
  height: 64rpx;
  background: url('data:image/png;base64,') no-repeat center center/contain;
  transform: translateY(-40rpx);
}