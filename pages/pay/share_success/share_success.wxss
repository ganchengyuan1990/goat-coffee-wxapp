page{
    background: #fff;
    min-height: 100%;
}

.container{
    background: #fff;
    min-height: 100%;
    padding-top: 30rpx;
}
.success-form {
  display: flex;
}
.coupon-left {
  height: 310rpx;
  /* width: 100%; */
  background: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 20rpx;
  display: flex;
  /* text-align: center; */
  flex-direction:column;

}

.input-box{
  flex: 1;
  height: 70rpx;
  color: #333;
  font-size: 24rpx;
  background: #fff;
  position: relative;
  border: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 4rpx;
  margin-right: 30rpx;
}

.coupon-sn{
  height: 50rpx;
  margin: 50rpx;
  margin-left: 68rpx;
  color: #000;
  line-height: 50rpx;
  font-size: 36rpx;
}

.gray {
  font-size: 28rpx;
  color: #999999;
  margin-top: -20rpx;
}

.coupon-right image {
  width: 108rpx;
  height: 130rpx;
  margin-top: 70rpx;
}
.go-button {
  background: #333;
  text-align: center;
  color: #fff;
  margin: 0 90rpx 80rpx 90rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.coupon-title {
  margin: 30rpx;
  color: #999999;
  font-size: 26rpx;
  position: relative;
}
.title-right {
  position: absolute;
  right: 30rpx;
  top: 0;
  color: #333;
}

.clear-icon{
  position: absolute;
  top: 21rpx;
  right: 30rpx;
  width: 28rpx;
  height: 28rpx;
}

.add-btn{
  height: 70rpx;
  border:none;
  width: 168rpx;
  background: #b4282d;
  border-radius: 0;
  line-height: 70rpx;
  color: #fff;
  font-size: 28rpx;
}

.add-btn.disabled{
  background: #ccc;
}

.help{
  height: 72rpx;
  line-height: 72rpx;
  text-align: right;
  padding-right: 30rpx;
  background: url(https://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/couponHelp-4768607555.png) 590rpx center no-repeat;
  background-size: 28rpx;
  color: #999;
  font-size: 24rpx;
}

.coupon-list{
  /* width: 100%; */
  height: auto;
  overflow: hidden;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.item{
  position: relative;
  height: 290rpx;
  width: 100%;
  background: linear-gradient(to right,#cfa568,#e3bf79);
  margin-bottom: 30rpx;
  padding-top: 52rpx;
}




.share-list {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  justify-content:center;

}

.coupon-info {
  text-align: right;
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
}

.user-info view {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  margin: 25rpx;
}