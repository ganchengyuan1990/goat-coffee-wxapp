page {
  background: #f6f6f6 !important;
}

.wrapper {
  background: #f6f6f6;
  padding-bottom: 30rpx;
  height:calc(100vh - 126rpx);
}
.promotion-tip {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  background-color: #FFDBDB;
  color: #666666;
  font-size: 28rpx;
  text-align: center;
  /* text-align: center; */
}
.group-wrapper {
  /* padding: 0 30rpx 0 30rpx; */
}

.promotion-tip text {
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 10rpx;
}

.radio {
  width: 30rpx;
  height: 30rpx;
  line-height: 72rpx;
  display: inline-block;
  border-radius: 50%;
  border: 1rpx solid #ccc;
  position: relative;
  top: 8rpx;
}
.title-box {
  position: relative;
  height: 74rpx;
}
.line {
  width: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  border-bottom: 1rpx solid #e5e5e5;
}
.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  padding-left: 35rpx;
  padding-right: 20rpx;
  background: #f6f6f6;
  display: block;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 30rpx;
}
.list-item {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  justify-content: space-between;
  border-radius: 8rpx;
  background: #fff;
  margin: 40rpx;
  position: relative;
  /* padding: 36rpx 15rpx 36rpx 30rpx; */
  align-items: center;
}

.row {
  flex-direction: row;
}
.list-item-name {
  display: flex;
  flex-direction: column;
  flex-grow: 5;
  margin-left: 1rem;
}
.promotion-description {
  height: 60rpx;
  line-height: 30rpx;
  width: 256rpx;
  font-size: 30rpx;
  font-weight: normol;
  color: #333333;
  margin-bottom: 10rpx;
  max-width: 400rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.higher {
  margin-bottom: 0rpx;
}
.left-part {
  padding: 66rpx 15rpx 66rpx 30rpx;
  display: flex;
}
.left-part {
  width: 170rpx;
  border-top-right-radius: 0.5rem;
  /* border-right: 2rpx dashed #999; */
}

.right-part {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.cover-top,
.cover-bottom {
  position: absolute;
  background: #f6f6f6;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  left: 200rpx;
}

.cover-top {
  top: -15rpx;
}

.cover-bottom {
  bottom: -15rpx;
}

.coupon-right {
  width: 60rpx;
}
.coupon-right image {
  width: 108rpx;
  height: 130rpx;
  margin-right: 10rpx;
}
.disable-promotion {
  color: #999999;
}
.promotion-limit-tip {
  font-size: 22rpx;
  color: #999999;
}

checkbox {
  display: flex;
  margin-top: 2rpx;
}
checkbox .wx-checkbox-input{
  border-radius: 50%;
  width: 42rpx;
  height: 42rpx;
  background: #fff;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border: none;
  background: #f50000;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border-radius: 50%;
  width: 42rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ffffff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
}

.list-item-deal {
  color: #333;
  font-size: 28rpx;
  margin-left: 0.15rem;
}

.list-item-deal .deal-num {
  font-size: 48rpx;
  color: #DF0202;
}

.no_coupon_wrapper {
  height: 100vh;
}

.no_margin_left {
  margin-left: 30rpx !important;
}

.money {
  font-size: 20rpx;
  margin-right: 5rpx;
}
.no_coupon_wrapper {
  /* height: 200rpx; */
  width: 210rpx;
  position: fixed;
  top: 40%;
  left: 50%;
  margin-top: -100rpx;
  margin-left: -100rpx;
}

.no_coupon_wrapper image {
  width: 200rpx;
  height: 200rpx;
}

.mention {
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.button {
  position: fixed;
  bottom: 0rpx;
  /* width: 100%; */
  left: 0rpx;
  right: 0rpx;
  color: #fff;
  display: flex;
  box-shadow: 0px 0px 5px 0px rgba(181, 181, 181, 0.5);

}

.button button {
  border-radius: 0rpx;
  background: #F50000;
  margin: 20rpx 30rpx;
  flex: 1;
  color: #fff;
  margin-right: 15rpx;
  margin-left: 15rpx;
}

.lefter {
  position: relative;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.coupon_border {
  border: 1rpx solid #E6E6E6;
}

.inner_border {
  border: 1rpx solid #FFABAB;
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  justify-content: space-between;
  flex: 1;
  /* margin-right: 50rpx; */
  width: 96%;
}

.padding_top {
  margin-top: 50rpx;
}

.use_int {
  color: #999999;
  font-size: 20rpx;
  position: absolute;
  bottom: 40rpx;
  right: 30px;
  display: inline-block;
  width: 88rpx;
}

.fast_icon {
  box-sizing: border-box;
  right: -10rpx;
  position: absolute;
  height: 10rpx;
  top: 12rpx;
  width: 10rpx;
  border: none;
  border-top: 10rpx solid #999;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
}